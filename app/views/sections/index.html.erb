<p id="notice"><%= notice %></p>

<h1>Sections</h1>
<%= link_to 'New Section', new_section_path %>
<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Course</th>
      <th>Teacher</th>
      <th>Nota</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.student_id %></td>
        <td><%= section.course_id %></td>
        <td><%= section.teacher_id %></td>
        <td><%= section.nota %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

